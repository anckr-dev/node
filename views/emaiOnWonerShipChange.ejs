    <style>
        body {
            color: #000;
        }
        .container {
            max-width: 640px;
            margin: auto;
        }
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            /* width: 640px; */
            height: 80%;
            /* margin: auto; */
            background-color: white;
            padding: 20px;
        }        .image {
